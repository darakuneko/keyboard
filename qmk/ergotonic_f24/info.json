    "maintainer": "hanachi-ap",
    "manufacturer": "hanachi-ap",
    "bootloader": "rp2040",
    "processor": "RP2040",
    "diode_direction": "COL2ROW",
	"features": {
		"console": false,
		"extrakey": true,
		"mousekey": true,
		"nkro": true,
		"rgblight": true
	},
    "ws2812": {
		"driver": "vendor",
		"pin": "GP1"
	},
    "rgblight": {
        "led_count": 18,
        "split": true,
        "split_count": [9, 9],
        "sleep": true,
        "animations": {
		    "breathing": true,
		    "rainbow_mood": true,
		    "rainbow_swirl": true,
		    "snake": true,
		    "knight": true,
		    "christmas": true,
		    "static_gradient": true,
		    "rgb_test": true,
		    "alternating": true,
		    "twinkle": true
        }
    },
    "usb": {
        "device_version": "1.0.0",
        "pid": "0x0012",
        "vid": "0xBB01"
    },
    "matrix_pins": {
        "cols": ["GP2","GP3","GP4","GP5","GP6","GP7","GP8","GP9","GP27"],
        "rows": ["GP26","GP22","GP20","GP23"]
    },
    "encoder": { 
        "enabled": true,
        "rotary": [
            {
                "pin_a": "GP21",
                "pin_b": "GP9",
                "resolution": 4
            },
            {
                "pin_a": "GP29",
                "pin_b": "GP28",
                "resolution": 4
            }
        ]
    },
    "split": {
        "enabled": true,
        "soft_serial_pin": "GP0",
        "usb_detect": {
            "enabled": true,
            "timeout": 5000
        },
        "encoder": {
            "right": {
                "rotary": [
                    {
                        "pin_a": "GP21",
                        "pin_b": "GP9",
                        "resolution": 4
                    },
                    {
                        "pin_a": "GP29",
                        "pin_b": "GP28",
                        "resolution": 4
                    }
                ]
            }
        }
    },
